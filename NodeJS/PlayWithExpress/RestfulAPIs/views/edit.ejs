<%- include('partials/nav') %>

<form method="POST" action="/comments/<%=id%>" class="edit-form">
    <input type="hidden" name="_method" value="PATCH" />
    <h1>Edit Your Comment</h1>
    
    <label for="comment" class="input-label">Please enter new comment to Edit</label>
    
    <textarea id="comment" name="comment" rows="5" cols="50" class="input-field" placeholder="Enter your comment here..."></textarea>
    
    <button type="submit" class="submit-btn">Submit</button>
</form>

<style>a
