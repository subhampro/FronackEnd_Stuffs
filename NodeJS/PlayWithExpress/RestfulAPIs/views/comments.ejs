<%- include('partials/nav') %>

<h2 class="comments-header">Comments</h2>

<ul class="comments-list">
  <% for(comment of comments) { %>
    <li class="comment-item">
      <p class="comment-text"><%= comment.comment %></p>
      <p class="comment-user">- <b><%= comment.username %></b></p>
      <div class="button-group">
        <a href="/comments/<%= comment.id %>" class="button">Details</a>
        <a href="/comments/<%= comment.id %>/edit" class="button">Edit</a>
      </div>
    </li>
  <% } %>
</ul>

<style>

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Roboto', sans-serif;
    background-color: #f9f9f9;
    color: #333;
    padding: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
  }


  .comments-header {
    font-size: 2.5rem;
    color: #4a90e2;
    margin-bottom: 2rem;
    text-align: center;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
  }


  .comments-list {
    list-style: none;
    padding: 0;
    width: 100%;
    max-width: 900px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .comment-item {
    background-color: white;
    padding: 1.5rem;
    border-radius: 10px;
    margin-bottom: 1rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .comment-item:hover {
    transform: scale(1.02);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .comment-text {
    font-size: 1.1rem;
    color: #555;
    line-height: 1.6;
  }

  .comment-user {
    font-size: 1rem;
    color: #888;
    margin-top: 0.5rem;
  }

  .button-group {
    margin-top: 1rem;
    display: flex;
    gap: 10px;
  }


  .button {
    padding: 10px 20px;
    background-color: #4a90e2;
    color: white;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 25px;
    text-decoration: none;
    transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
  }

  .button:hover {
    background-color: #357ab7;
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .button:active {
    transform: translateY(1px);
  }

  @media (max-width: 768px) {
    .comments-header {
      font-size: 2rem;
    }

    .comment-item {
      padding: 1rem;
    }

    .button {
      padding: 10px 18px;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    .comments-header {
      font-size: 1.8rem;
    }

    .comment-item {
      padding: 0.8rem;
    }

    .button {
      padding: 8px 14px;
      font-size: 0.8rem;
    }
  }
</style>

</body>
</html>
